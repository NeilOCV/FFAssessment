@model List<APIMessages.ContactEntity>

@{
    ViewBag.Title = "Contacts";
}

<h2>List of all contacts from Web API</h2>


<table class="table table-hover table-responsive table-striped" >
    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align:right"><b>Name</b></td>
            <td>@item.name</td>
        </tr>
        <tr>
            <td style="text-align:right"><b>Email address</b></td>
            <td>@item.email</td>
        </tr>
    <tr style="border-bottom-style:solid;border-bottom-color:black;border-bottom-width:2px;">
        <td style="text-align:right"><b>Telephone number</b></td>
        <td>@item.number</td>
    </tr>

    }

</table>

